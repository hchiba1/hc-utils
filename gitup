#!/usr/bin/perl -w
use strict;
use File::Basename;
my $PROGRAM = basename $0;
my $USAGE=
"Usage: $PROGRAM file message ...
git pull, add, commit and push
";

my ($FILE, @MESSAGE) = @ARGV;
my $MESSAGE = "@MESSAGE";

if (@ARGV == 1) {
    $MESSAGE = "update $FILE";
} elsif (@ARGV < 2) {
    print STDERR $USAGE;
    exit 1;
}

system "git fetch origin";
my $diff_exit_code = system("git diff HEAD..FETCH_HEAD --exit-code --quiet") >> 8;
if ($diff_exit_code) {
    print "[pull]\n";
    my $pull_exit_code = system("git pull") >> 8;
    if ($pull_exit_code) {
        die "pull failed.\n";
    } else {
        print "OK\n";
    }
    print "\n";
} else {
    print "remote: no change to pull\n ";
    print "OK\n";
    print "\n";
}

print "[add]\n";
my $add_exit_code = system("git add $FILE") >> 8;
if ($add_exit_code) {
    die "add failed.\n";
} else {
    print "$FILE\n";
    print "OK\n";
}
print "\n";

print "[commit]\n";
my $commit_exit_code = system("git commit -m '$MESSAGE'") >> 8;
if ($commit_exit_code) {
    die "commit failed.\n";
} else {
    print "OK\n";
}
print "\n";

print "[push]\n";
my $push_exit_code = system("git push") >> 8;
if ($push_exit_code) {
    die "push failed.\n";
} else {
    print "OK\n";
}
