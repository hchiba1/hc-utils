#!/usr/bin/env python3
import ftplib

def list_ftp_directory(host, username, password, directory):
    ftp = ftplib.FTP(host)
    ftp.login(username, password)
    ftp.cwd(directory)
    
    files = []
    ftp.dir(files.append)
    
    for file in files:
        print(file)
    
    ftp.quit()

host = "ftp.ncbi.nlm.nih.gov"
username = "anonymous"
password = ""
directory = "/"

def main():
    list_ftp_directory(host, username, password, directory)

if __name__ == "__main__":
    main()
